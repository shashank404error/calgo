<body>

<div class="bgimg w3-display-container w3-text-white">
  <div class="w3-display-topleft w3-jumbo logoFont">
    <b>CalGo</b>
  </div>

    <div class="w3-display-middle w3-container w3-pale-green w3-padding-48 w3-round-xlarge w3-card-4" style="width: 90%;">
    <center><p class="w3-xlarge" id="pForNotLoggedIn"><b>Host a meeting for free.</b></p>
     <p class="w3-large" id="pForLoggedIn" style="display: none;width:100%"></p>

      <div class="w3-cell-row">

        <div class="w3-container w3-transparent w3-cell">
           <input id="hostAMeetingBtn" type="button" class="w3-button w3-green w3-large" value="Host a meeting" onclick="openNav()" style="display: none;">
          <input id="initialSignUpGoogle" type="button" class="w3-button w3-green w3-large" value="Sign Up" onclick="getUserGoogleSignedIn()" style="display: none;">
        </div>

        <!---<div class="w3-container w3-transparent w3-cell">
         <form method="GET" action="/join-a-meeting">
          <input type="submit" class="w3-button w3-green" value="Join a meeting">
         </form>
        </div>--->

      </div></center>
  </div>
  <div class="w3-display-topright w3-container w3-xlarge">
    <div class="dropdown">
      <button class="w3-button w3-transparent dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-gear" style="font-size:28px;"></i></button>
      <ul class="dropdown-menu dropdown-menu-right">
        <li id="logoutText" style="display: none;"><a href="#" onclick="signOutFromGoogleLogin()">Logout</a></li>
        <li><a href="#">About Us</a></li>
        <li><a href="#">Contact Us</a></li>
      </ul>
    </div>
  </div>
</div>


<!----------------------------- options for calling below-------------------------------------------->
<!-- The overlay -->
<div id="myNav" class="overlay">

  <!-- Button to close the overlay navigation -->
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

  <!-- Overlay content -->
  <div class="overlay-content w3-xxlarge">
    <form method="GET" action="/one-to-one-meeting-host">
      <center><input type="submit" class="w3-transparent" value="One-to-One Call" style="border: 0;"></center>
    </form>
    <form method="GET" action="/host-a-meeting">
      <center><input type="submit" class="w3-transparent" value="Group Call (Beta)" style="border: 0;"></center>
    </form>
    <form method="GET" action="/one-to-many-meeting">
      <center><input type="submit" class="w3-transparent" value="Broadcast" style="border: 0;"></center>
    </form>
  </div>

</div>
<!-----------------------------------options for calling above-------------------------------------->

<script src="https://www.gstatic.com/firebasejs/7.14.6/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/7.14.6/firebase-firestore.js"></script>
<script src="https://www.gstatic.com/firebasejs/7.14.6/firebase-analytics.js"></script>
<script src="https://www.gstatic.com/firebasejs/7.15.0/firebase-auth.js"></script>
<script src="javascripts/indexMain.js"></script>
<script>
  /* Open when someone clicks on the span element */
  function openNav() {
    document.getElementById("myNav").style.width = "100%";
  }

  /* Close when someone clicks on the "x" symbol inside the overlay */
  function closeNav() {
    document.getElementById("myNav").style.width = "0%";
  }
</script>
</body>
</html>

