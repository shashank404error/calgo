<style>
  body,h1,h5 {font-family: "Raleway", sans-serif}
  body, html {height: 100%}
  .bgimg {
    background-image: url('images/backgroundHome.png');
    min-height: 100%;
    background-position: center;
    background-size: cover;
  }
  .logoFont {
    font-family: 'Sacramento', cursive;
  }
</style>
